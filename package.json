{
  "name": "@flypeng/tool",
  "version": "5.7.3",
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "description": "Integrate a collection of common tools and methods",
  "author": "flingyp",
  "license": "MIT",
  "homepage": "https://github.com/flingyp/flypeng-tool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flingyp/flypeng-tool.git"
  },
  "bugs": "https://github.com/flingyp/flypeng-tool/issues",
  "keywords": [
    "javascript",
    "typescript",
    "modules",
    "utilities",
    "tsup",
    "vitepress"
  ],
  "exports": {
    "./browser": {
      "import": "./dist/browser/index.js",
      "node": "./dist/browser/index.cjs",
      "types": "./dist/browser/index.d.ts",
      "default": "./dist/browser/index.d.ts"
    },
    "./node": {
      "import": "./dist/node/index.js",
      "node": "./dist/node/index.cjs",
      "types": "./dist/node/index.d.ts",
      "default": "./dist/node/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "gulp dev",
    "build": "gulp build",
    "docs:dev": "gulp docsDev",
    "docs:build": "gulp docsBuild",
    "docs:serve": "gulp docsServe",
    "new": "gulp newFunction",
    "release": "gulp release",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "prettier . --write && eslint .",
    "lint:fix": "prettier . --write && eslint . --fix",
    "commit": "cz",
    "first-release": "pnpm run release -- --first-release",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@flypeng/eslint-config": "^3.0.1",
    "@prettier/plugin-oxc": "^0.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/lodash": "^4.17.12",
    "@types/node": "^20.19.9",
    "@vitest/ui": "^1.6.1",
    "chalk": "^5.4.1",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.32.0",
    "esno": "^4.8.0",
    "gulp": "^4.0.2",
    "husky": "^8.0.3",
    "inquirer": "^9.3.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "html-to-image": "^1.11.13",
    "lodash": "^4.17.21"
  },
  "lint-staged": {
    "*": [
      "eslint ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
